name: Build and Run Docker Image for Visual Studio 2019

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main

jobs:
  build:
    runs-on: windows-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Build Base Docker Image
      run: |
        docker build --no-cache -t base -f Dockerfile.windows.base .

    - name: Build Docker Image for Visual Studio 2019
      run: |
        docker build --no-cache --build-arg CMAKE_VERSION=3.21.3 -t crossplatformapp-windows-vs19 -f Dockerfile.windows.vs19 .

    - name: Run Docker Container
      run: |
        docker run --rm crossplatformapp-windows-vs19